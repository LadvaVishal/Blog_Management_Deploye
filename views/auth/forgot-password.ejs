
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Reset Password</title> 

    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/signup.css">
</head>
<body>
    <!-- <%- include('../layout/navigation') %> -->
   
    <div>
      <header class="navigation">
          <nav class="navbar">  
              <ul>
                  <li><a href="/">Home</a></li>
                  <li><a href="/signup">SignUp</a></li> 
                  <li><a href="/admin-login">Admin login</a></li>
              </ul>
          </nav>
      </header>
  </div>

  <div class="wrapper">
    <h2>Reset Password</h2>
    
      <div class="errmsg" id="errorBackend">
        <% if (errorMessage) {%>
        <%= errorMessage %>
        <% } %>
      </div>
     
      <p id="frontEndError" class="errmsg"></p>
    <form   
       action="forgot-password"
       method="post" 
       onsubmit="return validateForm(event)"
       novalidate>
      <div class="input-box">
        <input type="email" placeholder="Enter your email" name="email" id="email" value="<%= email %>" >
      </div>

      <div class="input-box button">
        <input type="Submit">
      </div>
    </form>
  </div>
</body>
</html>

<script>
  function validateForm(event) {
    event.preventDefault(); 
    let email = document.getElementById("email").value.trim();
    let errMsg = document.getElementById("frontEndError");
    errMsg.textContent = "";
    let isValid = true;
   
      if (email === "") {
          errMsg.textContent = "Email can't empty";
          isValid = false;
      } 
      else if (!email.includes("@") || !email.includes(".")) {
          errMsg.textContent = "Invalid email format";
          isValid = false;
      }


      if (isValid) {
      document.querySelector("form").submit();
       }else{
        document.getElementById("errorBackend").innerHTML = "";
        return isValid;
       }
    }
</script>